{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gen libclang",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/submodules/cpptypeinfo/cpptypeinfo/cli.py",
            "args": [
                "gen",
                "dlang",
                "source/libclang"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/submodules/cpptypeinfo",
            }
        },
        {
            "name": "dclangen",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/dclangen.exe",
            "args": [
                // "${workspaceFolder}/main.cpp",
                "C:/Program Files/LLVM/include/clang-c/Index.h",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "C:/Program Files/LLVM/bin"
                }
            ],
            "externalConsole": false
        },
        {
            "name": "clang_sample",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/bin/clang_sample.exe",
            "args": [
                // "${workspaceFolder}/main.cpp",
                "C:/Program Files/LLVM/include/clang-c/Index.h",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "C:/Program Files/LLVM/bin"
                }
            ],
            "externalConsole": false
        },
    ]
}